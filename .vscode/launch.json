{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug concept", // doesn't matter but make it descriptive
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build/debug/concept", // compiled binary from build step
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build-litemenu-concept" // task name for build step
        }
    ]
}